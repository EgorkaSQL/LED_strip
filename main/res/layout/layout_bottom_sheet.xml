<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog">

    <Button
        android:id="@+id/topButtonSheet"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/back"
        android:contentDescription="Закрыть меню"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/topButtonSheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:fontFamily="sans-serif"
            android:text="Blink"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Fade"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="PHONK"
            android:background="@drawable/btn_toggle_selector"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="SOS"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Flash"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Strobe"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Cold Winter"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Romantic"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Relax"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Phonk 2"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button11"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Evening"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/button12"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/btn_toggle_selector"
            android:text="Police"
            android:textColor="#FFFFFF"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>