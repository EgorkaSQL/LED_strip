<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog">

    <GridLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--Устал делать переходы цветов время 5 утра позже исправлю-->
        <!-- Первый ряд -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#FF0000"
            android:contentDescription="Button 1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#E9967A"
            android:contentDescription="Button 2"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#2273E212"
            android:contentDescription="Button 3"/>
        <!-- Второй ряд -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#2196F3"
            android:contentDescription="Button 4"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#00BCD4"
            android:contentDescription="Button 5"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:contentDescription="Button 6"/>

        <!-- Третий ряд -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_margin="8dp"
            android:backgroundTint="#CDDC39"
            android:contentDescription="Button 7"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="95dp"
